{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,  // Para importar JSON (Ãºtil para tsconfig-paths mais abaixo)
    "paths": {
      "@app/*": ["src/*"],          // Ex: @app/main.ts -> src/main.ts
      "@common/*": ["src/common/*"], // Ex: @common/filters/error-filter.ts -> src/common/filters/error-filter.ts
      "@config/*": ["src/config/*"], // Ex: @config/env.validation.ts -> src/config/env.validation.ts
      "@core/*": ["src/core/*"],    // Ex: @core/interceptors/log.interceptor.ts -> src/core/interceptors/log.interceptor.ts
      "@modules/*": ["src/modules/*"] // Ex: @modules/health/health.module.ts -> src/modules/health/health.module.ts
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
