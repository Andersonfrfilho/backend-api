{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["jest", "node"],
    "paths": {
      "@app/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "**/*.spec.ts",
    "**/*.unit.spec.ts",
    "**/*.e2e.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}